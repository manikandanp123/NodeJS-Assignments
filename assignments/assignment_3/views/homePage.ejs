<html>
    <head>
        <title>HTML CONTENT</title>
        <style>
            *{
                font-size:xx-large;
                margin: 30px;
            }
            a{
                background-color: green;
                color:black;
                text-align: center;
                border: 1px solid black;
                position:absolute;
                left: 45%;
            }
            a:hover{
                background-color: black;
                color:red;
                border: 1px solid red;
            }
        </style>
    </head>
    <body>
        <div class="parent">
            <div class="child">
                <table border="2">
                    <thead bgColor="yellow">
                        <tr>
                            <th>S.NO</th>
                            <th>Name</th>
                            <th>Age</th>
                            <th>City</th>
                            <th>Email</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach((user,idx)=>{ %>
                        <tr>
                            <td><%= user.number %> </td>
                            <td><%= user.name %> </td>
                            <td><%= user.age %> </td>
                            <td><%= user.city %> </td>
                            <td><%= user.email %> </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
                <a href="/form">Add user</a>
            </div>
        </div>
    </body>
</html>